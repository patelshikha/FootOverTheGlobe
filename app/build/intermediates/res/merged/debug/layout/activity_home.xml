<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:background="#F44336"
        android:padding="16dp"
        >

        <!-- <ImageView
             android:layout_width="400dp"
             android:layout_height="wrap_content"
             android:src="@drawable/home"
             tools:layout_editor_absoluteY="2dp"
             tools:layout_editor_absoluteX="-1dp"
             android:scaleType="centerCrop" />-->



        <TextView
            android:id="@+id/maketrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MakeYourTrip"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
android:textAlignment="center"
            android:text="#Explore #Dream #Discover"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>


    <android.support.v7.widget.CardView

        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:clickable="true"

        android:layout_marginTop="16dp">


        <!--

      card_view:cardCornerRadius="10dp"
             card_view:cardElevation="5dp"
             card_view:cardUseCompatPadding="true"
     -->


        <RelativeLayout
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:layout_alignTop="@+id/card_view1"
            android:layout_alignParentStart="true">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/plan1"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="265dp" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_marginTop="10dp"
                android:text="Plan A Trip"
                android:layout_marginLeft="16dp"
                android:textColor="#333333"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can start planning your trip"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_below="@+id/name"
                android:textSize="14dp"
                android:textColor="#666666"
                android:layout_marginLeft="16dp"
                android:textStyle="italic"
                android:typeface="sans" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="#ff0"

        >


        <!--

      card_view:cardCornerRadius="10dp"
             card_view:cardElevation="5dp"
             card_view:cardUseCompatPadding="true"
     -->


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dp"
            android:padding="3dip"
            android:layout_alignTop="@+id/card_view1"
            android:layout_alignParentStart="true">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="265dp" />


            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/img1"
                android:text="Profile"
                android:textColor="#333333"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"

                android:typeface="sans" />

            <TextView
                android:id="@+id/dec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="You can see your profile details"
                android:layout_toRightOf="@+id/img1"
                android:layout_below="@+id/name1"
                android:textSize="14dp"

                android:layout_marginLeft="16dp"
                android:textStyle="italic"
                android:typeface="sans" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="#ff0"
        android:layout_weight="1">


        <!--

      card_view:cardCornerRadius="10dp"
             card_view:cardElevation="5dp"
             card_view:cardUseCompatPadding="true"
     -->


        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/card_view1"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dp"
            android:padding="3dip">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/history1"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="265dp" />


            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/img2"
                android:text="History"
                android:layout_marginTop="10dp"

                android:textSize="20dp"
                android:textStyle="bold"

                android:typeface="sans" />

            <TextView
                android:id="@+id/dec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/name2"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/img2"
                android:text="You can see your trips and records"
                android:textColor="#666666"
                android:textSize="14dp"
                android:textStyle="italic"
                android:typeface="sans" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>